footer
    background url(../img/footer-bg.png) repeat-x
    background-size auto 100%
    height 310px
    width 100%
    display inline-block
    position relative
    padding 65px 0 50px 0
    font-family 'Gotham Rounded Book'
    @media ipad
        padding 35px 0

.footer-horse
    position absolute
    right 40px
    top -40px

    img
      width 72px
      height 72px

    @media mobile
      right 15px

.footer-wrap
    width 200px
    margin 0 auto
    text-align center
    img
        text-align center
        margin-bottom 15px
    p
        font-size 11px
        font-weight normal
        font-style normal
        font-stretch normal
        text-align center
        color #ffffff
        line-height 13px
        font-family 'Gotham Rounded Book'
    i
        margin-top 15px
        color #fff
        font-size 20px

.footer-info
    @media mobile
        width 100%
        text-align center
        margin-top 15px
    @media ipad
        width 100%
        text-align center
        margin-top 15px
    div
        margin-bottom 5px
    i
        color #fff
        font-size 15px
        margin-right 10px
        &.call
            margin-right 16px
    a
        color #fff
        font-size 15px
        @media mobile
            font-size 12px
