header
  width 100%
  height 114px
  background-color #151515
  -o-transition all 0.4s ease
  -ms-transition all 0.4s ease
  -moz-transition all 0.4s ease
  -webkit-transition all 0.4s ease
  transition all 0.4s ease

  >.container
    width 100%

  &.homepage-header
    height 135px
    border-bottom 23px solid #1f1f1f

  @media mobile
    border-bottom none !important

  a.logo
    text-align center

    img
      display inline-block

  nav
    padding 42px 0
    display inline-block
       @media mobile
          padding 0

    &.pull-right
    &.pull-left

    .m-none
        @media mobile
          text-align center
          margin 0 auto


    ul
      li
        float left
        @media mobile
          width 100%
          padding 12px 0 0px
        a
          text-transform uppercase
          margin 0 15px
          padding 0 7px
          padding-bottom 10px
          display inline-block
          font-size 11px
          font-weight bolder
          font-style normal
          font-stretch normal
          letter-spacing 1.1px
          text-align center
          color #ffffff
          border-bottom 1px solid
          border-color transparent
  a
    &.logo
      display inline-block
      padding 22px 0
      text-align center
      width 100%

  @media mobile
    height 72px !important

    nav
      padding 10px 0 0

      ul li a
        margin 0 11px 0 0px


    a
      &.logo
        padding 0
        text-align left

    .logo img
      height 43px
      margin-top 14px

    .navbar-toggle
      padding 0
      margin 0
      margin-top 25px

    .hamburguer-menu
      background black
      margin-top 12px

      .navbar-collapse
        border-color black

  @media ipad
    header
    nav
        ul
            li
                a
                    margin 0 -1px
                    font-size 9px
  @media ipadLand
    header
    nav
        ul
            li
                a
                    margin 0 5px
  @media smalldesk
    header
    nav
        ul
            li
                a
                    margin 0 6px




header nav ul li a:hover,
header nav ul li a:focus,
header nav ul li a.active
  outline none
  text-decoration none
  color #fff
  border-bottom 1px solid #fff

.mt
  margin-top 114px
  @media mobile
    margin-top 80px
  @media mobileLand
    margin-top 103px
  @media ipad
    margin-top 100px
  @media ipadLand
    margin-top 100px


.fixed
    position fixed
    top 0
    left 0
    width 100%
    z-index 9999
    -o-transition all 0.4s ease
    -ms-transition all 0.4s ease
    -moz-transition all 0.4s ease
    -webkit-transition all 0.4s ease
    transition all 0.4s ease

.theme
  .navbar-default
    @media mobile
      background none
      border none

  .navbar
    @media mobile
      min-height 0
      margin-bottom 0
      padding 0

  .hamburguer-container
    height 72px

  .navbar-toggle
    @media mobile
      margin-right 5px
      border none
      color #fff
    @media mobileLand
      .icon-bar
            background-color #fff
  .navbar-toggle:hover, .navbar-toggle:focus
    @media mobile
      background none

.navbar-collapse
  padding-left 0


.navbar-default
    .navbar-toggle
        .icon-bar
            background-color #ffffff
            width 30px
            height 3px

.mobmenu
  display inline-block
  @media mobileLand
    max-height 242px
    display inline-block
    overflow scroll
    padding-bottom 8px

    li
      padding 10px 0 0


