mobile = "only screen and (min-width:1px) and (max-width:767px)"
mobileLand = "(min-device-width: 1px) and (max-device-width: 767px) and (orientation:landscape)"
mobileiph6 = "(min-device-width: 375px) and (max-device-width: 667px) and (-webkit-min-device-pixel-ratio: 2)"
ipad = "only screen and (min-width:768px) and (max-width:1023px)"
ipadLand = "(min-device-width: 768px) and (max-device-width: 1024px) and (orientation:landscape)"
smalldesk = "only screen and (min-width:1024px) and (max-width:1200px)"
*
  box-sizing border-box
  padding 0
  margin 0

html
  font-size 16px

  @media screen and (max-width: 768px)
    font-size 14px

  @media screen and (max-width: 480px)
    font-size 12px

body
  font-family 'Nexa' !important

a
  &,
  &:hover,
  &:focus
    text-decoration none
    cursor pointer

ul
 padding 0
 margin 0
 list-style none

#page
  margin 0
  overflow-x hidden
  padding 0

.container-full
  margin 0 auto
  padding 0
  width 100%

.modal
  padding-top 60px !important

.carousel-control .glyphicon-chevron-left,
.carousel-control .glyphicon-chevron-right,
.carousel-control .icon-next,
.carousel-control .icon-prev
  transform translateY(-50%)

.close
  outline none !important
  top 0 !important
  transform translateY(-100%)

  span
    line-height 1

  img
    width 40px

@import 'partials/navbar'

@import 'partials/footer'
