.faq
    width 100%
    max-width 780px
    padding 65px 0
    margin auto
    @media mobile
        padding 56px 0 80px
    .inner-heading
        padding-bottom 56px
        @media ipad
            padding 25px 0

.faq-box
    width 100%
    display inline-block
    border solid 1px #e5e5e5
    padding 40px 0px
    margin 0 0 20px 0
    @media mobile
        text-align center
        padding 45px 30px
        margin 0 0 20px 0
.faq-img
    width 100%
    padding 0 30px
    text-align center
    @media mobile
        margin-bottom 25px
    & > img
            @media mobile
                display inline

.faq-content
    padding 0 30px 0 0
    display inline-block
    @media mobile
        padding 0


.faq-content
    h5
        font-family 'Gotham Rounded'
        font-size 21px
        font-weight 500
        font-style normal
        font-stretch normal
        color #4a4a4a
        margin 0 0 14px
    p
        font-family 'Gotham Rounded Book'
        font-size 17px
        font-weight 500
        font-style normal
        font-stretch normal
        line-height 1.35
        color #9b9b9b
        margin 0
    strong
        font-family 'Gotham Rounded Book'
        font-size 17px
        font-style italic
        font-stretch normal
        color #4a4a4a
        padding 0 10px 0 0
        display inline-block
        padding 30px 10px 0 0
        vertical-align top
    img
        display inline-block

.sub-box
    display inline-block
    padding 25px 0
    margin 0 10px