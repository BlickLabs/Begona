.parallax-mirror
  z-index 1 !important

.parallax-container.homepage-parallax
  margin-top 100px
  height 80vh

  .parallax-window
    background-position center

  @media mobile
    height 50vh
    margin-top 72px

.parallax-container
    position relative
    overflow hidden
    height 774px

    .parallax-window
      height 100% !important

    @media mobile
      height 210px
    @media mobileLand
      height 300px
    @media ipad
      height 768px
    @media ipadLand
      height 768px

.parallax-window
    position relative
    vertical-align middle
    text-align center
    height 637px
    width 100%

    @media mobile
      height 350px
      vertical-align top

.dimond-pattren
  position absolute
  top 0
  background url(../img/home-pattern.png) repeat-x
  background-size cover
  height 100%
  width 100%
  z-index 3

.homepage-parallax .banner-text
    width 90%
    position absolute
    top 50%
    left 5%
    transform translateY(-50%)
    z-index 999

    img
        display inline
    span
        width 190px
        height 1px
        background #fff
        display inline-block
        margin-top 50px
            @media mobile
                margin-top 20px

.basic-info
    background rgba(254, 235, 195, .67)
    display inline-block
    width 100%
    text-align center
    padding 56px 0

    h2
        font-size 18px
        font-weight bold
        font-style normal
        font-stretch normal
        line-height 1.11
        letter-spacing 1.8px
        text-align center
        color #371900
        font-family 'Nexa Slab Bold FREE'
        margin 0 auto
        padding 0
        max-width 460px
        @media mobile
            font-size 15px
            padding 0 15px

.g-con
    position relative
    background #f5f5f5

.home-gallery
    width 100%
    max-width 772px
    display block
    padding 56px 0
    margin auto
    position relative
    z-index 999
    @media mobile
        padding 56px 35px
    @media ipad
        padding 56px 35px
    h3
        margin 0 0 60px
        padding 0
        font-size 22px
        font-style normal
        font-stretch normal
        text-align center
        color #371900
        @media mobile
            margin-bottom 56px

.line
    width 45px
    height 1px
    background #371900
    vertical-align middle
    margin-right 12px
    display inline-block

.gallery-img
    overflow hidden
    img
        vertical-align bottom
        -webkit-transition all 2s ease
        -moz-transition all 2s ease
        -ms-transition all 2s ease
        transition all 2s ease
        &:hover
            transform scale(1.25)

a
    &.galleryBtn
        background #4a4a4a
        color #fff
        font-size 18px
        border-radius 0
        text-align left
        margin-top 40px
        padding: 13px 30px
        height: 53px
        font-family 'Gotham Rounded Book'
        @media mobile
            margin-top 56px
    &.IconBtn
        background #4a4a4a
        color #fff
        font-size 18px
        border-radius 0
        text-align left
        margin-top 70px
        padding: 13px 60px
        font-weight normal
        height: 53px
        font-family 'Gotham Rounded Book'
        @media mobile
            margin-top 0

a.galleryBtn:hover,
a.galleryBtn:focus,
a.IconBtn:active
  background #feebc3
  color #333

.gallery-bg
    background rgba(171, 201, 211, 0.31)
    height 304px
    width 100%
    display inline-block
    z-index 99
    position absolute
    bottom 0
    left 0

.theme
    .pd0
        padding 0
        margin 0

.shoose
    width 100%
    display inline-block
    padding 58px 125px
    margin-top -300px
    @media mobile
        padding 56px 15px 0
        margin-top 0
    @media ipad
        padding 58px 125px 0 125px
        margin-top 0

    h3
        margin 0 0 88px
        padding 0
        font-size 22px
        line-height 0.91
        letter-spacing 2.1px
        font-style normal
        font-stretch normal
        text-align center
        color #371900
        font-family 'Nexa Slab Bold FREE'
        @media mobile
            margin 0

.shoose-detail
    width 400px
    margin 0 auto
    position relative
    object-fit contain
    font-family 'Gotham Rounded Book'
    span
        position absolute
        strong
            color #371900
            display inline-block
            font-weight normal
            font-size 18px
            line-height 20px
            &.lft
                margin-right 8px
            &.rht
                margin-left 8px
        &.detail1
            left -100px
            top 20px
        &.detail2
            bottom 140px
            left -110px
        &.detail3
            bottom 32px
            left -170px
        &.detail4
            right -18px
            top 0px
            img
                margin-top -40px
        &.detail5
            bottom 160px
            right -100px
        &.detail6
            bottom 110px
            right -120px
.verTop
    vertical-align top
.shoose-img
    text-align center
    img
        display inline

.home-video
    position relative
    height 0
    overflow hidden
    width 100%
    max-width 760px
    height auto
    margin 78px auto
    @media mobile
      margin 56px 0

.home-video iframe, .home-video object, .home-video embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.icon-home
    width 100%
    display inline-block
    padding 57px 125px
    background #f5f5f5
    position relative
    @media mobile
        padding 40px 15px
        padding-bottom 100px

    h3
        margin 0 0 62px
        padding 0
        font-size 22px
        font-style normal
        font-stretch normal
        text-align center
        color #371900
        font-family 'Gotham Rounded book'
        font-weight normal
        text-transform uppercase

.icon-box
    text-align center
    @media mobile
        margin-bottom 40px
    img
        margin-bottom 15px
    p
        font-size 18px
        font-weight 600
        font-style normal
        font-stretch normal
        text-align center
        color #4a4a4a
        font-family 'Gotham Rounded book'
        margin 0
        line-height 20px

a.IconBtn:hover,
a.IconBtn:focus
    background #d8861c
    color #fff

.horse-rider
    position absolute
    left 0
    top -55px
    & > img
            @media mobile
                width 130px

#horse-stop
    img
        margin-top 150px

.parallax-window
    &.home-window
        @media mobile
            height 220px
            background-repeat no-repeat
            background-position top!important
        @media mobileLand
            height 310px
        @media ipad
            background-repeat no-repeat
            background-position top!important
        @media ipadLand
            background-repeat no-repeat
            background-position top!important

