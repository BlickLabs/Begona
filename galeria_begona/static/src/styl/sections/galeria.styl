.gallery
    max-width 840px
    margin auto
    padding 65px 0
    @media mobile
        padding 56px 0 60px
    .inner-heading
        margin-bottom 56px
        font-family 'Gotham Rounded Book'
        text-align center
        @media ipad
            padding 25px 0 45px
            margin 0
.spacer
    padding 0 10px 0px 10px!important
    margin 0!important

.home-gallery
    &.galería-inner
        background #fff
        padding 0

.galería-inner
    .gallery-img
        margin-bottom 20px
        @media mobile
            width 100%
            text-align center
    img
        @media mobile
            display inline    
.carousel-inner 
    text-align center

.carousel-inner
    & > .item
        & > img
            display inline
            
#myImg
    border-radius 5px
    cursor pointer
    transition 0.3s
    &:hover
        opacity 0.7

.modal
    display none
    position fixed
    z-index 99995
    padding-top 180px
    left 0
    top 0
    width 100%
    height 100%
    overflow auto
    background-color rgb(0,0,0)
    background-color rgba(0,0,0,0.7)

.modal-content
    margin auto
    display block
    width 80%
    max-width 700px

#caption
    margin auto
    display block
    width 80%
    max-width 700px
    text-align center
    color #ccc
    padding 10px 0
    height 150px
.theme
    .close
        color #f1f1f1
        font-size 100px
        font-weight normal
        position absolute
        right -80px
        top -30px
        transition all 0.3s ease 0s
        opacity: 1;

.theme .carousel-control .glyphicon-chevron-right,
.theme .carousel-control .icon-next
    margin-right -270px
    @media mobile
        margin-right -60px
    @media ipad
        margin-right -100px    

.theme .carousel-control .glyphicon-chevron-left,
.theme .carousel-control .icon-prev
    margin-left -270px
    @media mobile
        margin-left -60px
    @media ipad
        margin-left -100px

.fa.fa-angle-left.glyphicon-chevron-left, .fa.fa-angle-right.glyphicon-chevron-right
    font-size 70px

.glyphicon-chevron-left
    &:before
        display none

.glyphicon-chevron-right
    &:before
        display none

.theme
    .modal-body
        padding 0
    .modal-content
        background none
        box-shadow none
        border none
    a
        &.carousel-control
            background none
            box-shadow none

.modal-content,
#caption
    -webkit-animation-name zoom
    -webkit-animation-duration 0.6s
    animation-name zoom
    animation-duration 0.6s





