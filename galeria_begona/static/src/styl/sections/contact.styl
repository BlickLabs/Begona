.contacto
    width 100%
    padding 60px 0
    @media mobile
        padding 56px 0 80px
    .inner-heading
        padding-bottom 56px
        @media ipad
            padding 25px 0

.contact-form
    width 100%
    padding 20px 0
    label
        float right
        font-size 18px
        color #4a4a4a
        font-weight normal
        font-stretch normal
        padding 20px 0 0 0
        font-style normal
        font-family 'Gotham Rounded Book'
        @media mobile
            float left

        &.error
          color #ff3636
          font-size 1.1em
          padding 0
          padding-top 10px
    @media mobile
        padding 0

    .form-control
        width 100%
        height 56px
        border solid 1px #e5e5e5
        border-radius 0
        box-shadow none
        padding 0 15px

    input.form-control:focus
        outline none
    .contact-form .form-control:focus
        box-shadow none
        outline none
    .mensaje-box
        height 184px
        resize none
        padding-top 15px
    .mensaje-box:focus
        outline none
    &.btn
        border-radius none
    .enviar
        background #e2afac
        border-color none
        padding 7px 25px
        height 36px
        float right
        border none
        color #FFF
        font-size 18px
        font-style normal
        margin-top 5px
        margin-right 30px
        font-family 'Gotham Rounded Book'
        @media mobile
            float none
            margin-right 0
            font-size 20px
            height 50px
    .form-group
      float left
      margin-bottom 20px
      width 100%

    .begona-loader,
    .form-message
      text-align right
      width 100%

      .ball-pulse-sync
        margin-right 45px
        margin-top 30px

      @media mobile
        text-align center

        .ball-pulse-sync
          margin-right 0

    .form-message
      padding-right 30px
      margin 20px 0

      @media mobile
        padding-right 0

.contacto-content
    width 286px
    margin 80px 0 0 80px
    float left
    strong
        font-family Nexa
        font-size 18px
        font-weight bold
        font-style normal
        font-stretch normal
        letter-spacing 2.4px
        color #4a4a4a
        line-height 22px
    a
        font-family Nexa
        font-size 18px
        font-weight bold
        font-style normal
        font-stretch normal
        letter-spacing 2.4px
        color #4a4a4a
        width 100%
        display inline-block
        line-height 22px
        &:hover
            color #4a4a4a
            text-decoration none
    small
        font-size 15px
        font-weight normal
        font-style normal
        font-stretch normal
        color #4a4a4a
        font-family 'Gotham Rounded Book'
        width 100%
        display inline-block
        @media mobile
            font-size 15px
            padding 0
            max-width 220px
        @media mobileLand
            max-width 400px
            padding 0 75px
    p
        font-size 18px
        color #9b9b9b
        line-height 18px
        padding 0
        margin 52px 0 0 0
        font-weight 500
        font-family 'Gotham Rounded'
        letter-spacing -0.2px
        font-style normal
    .faq-btn
        background-color #abc9d3
        font-size 18px
        text-align center
        color #FFF
        padding 12px 35px
        margin 20px 0 0 0
        font-family 'Gotham Rounded Book'
        width auto
        height 42px
        &:hover
            color #FFF
    @media mobile
        padding 0 15px
        width 100%
        margin-left 0
        text-align center
        margin-top 40px
    @media ipad
        padding 0 15px
        width 100%
        margin 60px 0 0 0px

.line-botom
    width 104px
    border-bottom solid 1px #e5e5e5
    display inline-block
    font-style normal
    margin-bottom 6px
    margin-top 15px
    @media mobileLand
        margin 20px auto 10px auto
        display block
        width 104px



.btn-center
    @media mobile
        text-align center